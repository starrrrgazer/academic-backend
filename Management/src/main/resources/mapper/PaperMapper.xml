<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.management.mapper.PaperMapper">

    <insert id="addPaper" parameterType="Paper">
        insert
        into Paper(id,title,authors,url,issue,doi,n_citations,keywords,
                   page_start,page_end,venue,volume,year,isbn,issn,pdf,abstracts)
        values (#{id}, #{title}, #{authors}, #{url},#{issue}, #{doi}, #{n_citations},
                #{keywords}, #{page_start}, #{page_end}, #{venue}, #{volume}, #{year}, #{isbn}, #{issn}, #{pdf}, #{abstracts})
    </insert>

    <select id="getPaperById" parameterType="java.lang.String" resultType="Paper">
        select *
        from Paper
        where id = #{id}
    </select>

    <delete id="deletePaper" parameterType="java.lang.String">
        delete
        from Paper
        where id = #{id}
    </delete>
    
</mapper>